<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Store</h1>
        <div class="col-6 offset-3">
            <form action="/stores/<%=store._id%>?_method=PUT" method="Post" novalidate class="validated">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="store[title]" value="<%=store.title%>" id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="store[location]" id="location" value="<%=store.location%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" name="store[image]" id="image" value="<%=store.image%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Cone Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" name="store[price]" value="<%=store.price%>" placeholder="0.00"
                            aria-label="price" aria-describedby="price-label" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="store[description]" id="description" required><%= store.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Store</button>
                </div>
                <div>
                    <a href="/stores/<%= store._id %> ">Back to Store</a>
                </div>
            </form>

        </div>
    </div>
    </div>