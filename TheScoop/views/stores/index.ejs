<% layout('layouts/boilerplate')%> 
 <div class="text-center">
     <img src="/scoop.PNG" height ="300" width="auto" alt="Logo">
 </div>   
<h1>All Stores</h1>
        <% for (let store of stores) {%> 
        <div class = "card" md-4>
            <div class = "row">
                <div class= "col-md-4">
                    <img class = "img-fluid" src="<%= store.image %> " alt="">
                </div>
                <div class = "col-md-8">
                    <div class = "card-body">
                        <h5 class = "card-title"><%= store.title %></h5>
                        <p class = "card-text"><%= store.description%></p>
                        <p class = "card-text">
                            <small class ="text-muted"><%= store.location %></small>
                        </p>
                        <a class = "btn btn-primary" href="/stores/<%= store._id %> ">View <%= store.title %> </a>
                    </div>

                </div>
            </div>
        </div>
        <% } %> 
  